<div class="container mt-5">
  <div class="row">
    <!-- Main Content -->
    <section class="col-md-9">
      {{#if data.item}}
      <div class="card mb-4 shadow-sm">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="{{data.item.featureImage}}" class="img-fluid rounded-start" alt="{{data.item.title}}">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title">{{data.item.title}}</h3>
              <p class="card-text">{{{data.item.body}}}</p>
              <p class="card-text">
                <strong>Price:</strong> ${{data.item.price}}<br>
                <strong>Category:</strong> {{data.item.Category.category}}<br>
                <strong>Last Updated:</strong> {{formatDate data.item.postDate}}
              </p>
            </div>
          </div>
        </div>
      </div>
      {{else}}
      <div class="alert alert-info text-center">
        <h2>{{message}}</h2>
        <p>Please try another Post / Category</p>
      </div>
      {{/if}}
    </section>
    
    <!-- Sidebar -->
    <aside class="col-md-3">
      {{#if data.items}}
      <div class="mb-4">
        <h5>Items</h5>
        <div class="list-group">
          {{#each data.items}}
          <a href="/shop/{{id}}?category={{categoryId}}" class="list-group-item list-group-item-action">{{title}}</a>
          {{/each}}
        </div>
      </div>
      {{/if}}
      {{#if data.categories}}
      <div>
        <h5>Categories</h5>
        <div class="list-group">
          {{#each data.categories}}
          <a href="/shop?category={{id}}" class="list-group-item list-group-item-action">{{category}}</a>
          {{/each}}
        </div>
      </div>
      {{/if}}
    </aside>
  </div>
</div>

