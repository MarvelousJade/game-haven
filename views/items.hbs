<div class="container mt-5">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="mb-0">Items</h3>
      <a href="/items/add" class="btn btn-success">Add Item</a>
    </div>
    <div class="card-body">
      {{#if data.length}}
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Category</th>
              <th>Price</th>
              <th>Published</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each data}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{formatDate postDate}}</td>
              <td>
                <a href="/items?category={{Category.id}}">{{Category.category}}</a>
              </td>
              <td>{{price}}</td>
              <td>{{published}}</td>
              <td>
                <a href="/items/delete/{{id}}" class="btn btn-danger btn-sm">Remove</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <div class="alert alert-info text-center">
        <strong>{{message}}</strong>
      </div>
      {{/if}}
    </div>
  </div>
</div>

