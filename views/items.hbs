<div class="row">
  <div class="col-md-12">
    <h2><a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
    <hr />
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Category</th>
              <th>Price</th>
              <th>Published</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each data}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{formatDate postDate}}</td>
              <td>
                <a href="/items?category={{Category.id}}">{{Category.category}}</a>
              </td>
              <td>{{price}}</td>
              <td>{{published}}</td>
              <td><a href="/items/delete/{{id}}" class="btn btn-danger">remove</td>
            </tr>
            {{/each}}
          </tbody>
      </table>  
    </div>
  </div>
  {{#unless data.length}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>

